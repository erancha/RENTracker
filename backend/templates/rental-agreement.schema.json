{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "date",
    "landlordName",
    "landlordId",
    "landlordAddress",
    "tenantName",
    "tenantId",
    "tenantAddress",
    "roomCount",
    "propertyAddress",
    "leasePeriod",
    "startDate",
    "endDate",
    "rentAmount",
    "paymentDay"
  ],
  "properties": {
    "date": {
      "type": "string",
      "description": "Date of agreement signing"
    },
    "landlordName": {
      "type": "string",
      "description": "Full name of landlord"
    },
    "landlordId": {
      "type": "string",
      "description": "ID number of landlord"
    },
    "landlordAddress": {
      "type": "string",
      "description": "Address of landlord"
    },
    "tenantName": {
      "type": "string",
      "description": "Full name of tenant"
    },
    "tenantId": {
      "type": "string",
      "description": "ID number of tenant"
    },
    "tenantAddress": {
      "type": "string",
      "description": "Current address of tenant"
    },
    "roomCount": {
      "type": "number",
      "description": "Number of rooms in property"
    },
    "propertyAddress": {
      "type": "string",
      "description": "Address of rental property"
    },
    "leasePeriod": {
      "type": "number",
      "description": "Lease period in months"
    },
    "startDate": {
      "type": "string",
      "description": "Start date of lease"
    },
    "endDate": {
      "type": "string",
      "description": "End date of lease"
    },
    "rentAmount": {
      "type": "number",
      "description": "Monthly rent amount in NIS"
    },
    "paymentDay": {
      "type": "number",
      "description": "Day of month when rent is due",
      "minimum": 1,
      "maximum": 31
    }
  }
}